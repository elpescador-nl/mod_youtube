<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
	<name>youtube</name>
	<author>Mark Visser</author>
	<creationDate>Mar 2017</creationDate>
	<copyright>(C) 2017 Mark Visser</copyright>
	<license>(none)</license>
	<authorEmail>mark@elpescador.nl</authorEmail>
	<authorUrl>http://www.elpescador.nl/</authorUrl>
	<version>1.0</version>
	<description>MOD_YOUTUBE_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_youtube">mod_youtube.php</filename>
		<filename>mod_youtube.xml</filename>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="videoId" type="text" default="" label="MOD_YOUTUBE_VIDEOID_LABEL" description="MOD_YOUTUBE_VIDEOID_DESC" />
				<field name="playlist" type="text" default="" label="MOD_YOUTUBE_PLAYLIST_LABEL" description="MOD_YOUTUBE_PLAYLIST_DESC" />
				<field name="label" type="text" default="" label="MOD_YOUTUBE_LABEL_LABEL" description="MOD_YOUTUBE_LABEL_DESC" />
				<field name="pretext" type="textarea" filter="raw" cols="20" rows="5" default="" label="MOD_YOUTUBE_FIELD_PRETEXT_LABEL" description="MOD_YOUTUBE_FIELD_PRETEXT_DESC" />
				<field name="posttext" type="textarea" filter="raw" cols="20" rows="5" label="MOD_YOUTUBE_FIELD_POSTTEXT_LABEL" description="MOD_YOUTUBE_FIELD_POSTTEXT_DESC" />

			</fieldset>
		</fields>
	</config>
</extension>
